<!-- Wrapped div in anchor tag, removed href from div -->
<a href="/" class="block w-56 h-56" aria-label="Home">
  <div
    id="nav-logo-lottie"
    class="w-full h-full cursor-pointer transition-filters duration-300 dark:invert"
  >
  </div>
</a>

<script>
  import lottie from "lottie-web";
  // Ensure this path is correct based on your folder structure
  import logoData from "../assets/Logo-Anim.json";

  const container = document.getElementById("nav-logo-lottie");

  if (container) {
    const anim = lottie.loadAnimation({
      container: container,
      renderer: "svg",
      loop: false,
      autoplay: true,
      animationData: logoData,
    });

    container.addEventListener("mouseenter", () => {
      anim.goToAndPlay(0);
    });
  }
</script>
