<a href="/" class="block">
  <div id="nav-logo-lottie" class="w-8 h-8 cursor-pointer dark:invert"></div>
</a>

<script>
  import lottie from "lottie-web";
  // Ensure logo.json exists in src/assets/
  import logoData from "../assets/Logo-Anim.json";

  const containers = document.querySelectorAll(".nav-logo-lottie");

  containers.forEach((container) => {
    const anim = lottie.loadAnimation({
      container: container,
      renderer: "svg",
      loop: false,
      autoplay: true, // Plays once on load
      animationData: logoData,
    });

    // Replay on hover
    container.addEventListener("mouseenter", () => {
      anim.goToAndPlay(0);
    });
  });
</script>
